{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "scripts", "./src/**/*.stories.*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@constants/*": ["constants/*"],
      "@util/*": ["util/*"],
      "@types/*": ["types/*"],
      "@page/*": ["page/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
