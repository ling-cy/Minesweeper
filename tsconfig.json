{
  "include": ["./src/**/*", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "scripts", "./src/**/*.stories.*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noResolve": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@constants/*": ["src/constants/*"],
      "@util/*": ["src/util/*"],
      "@types/*": ["src/types/*"],
      "@page/*": ["src/page/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
